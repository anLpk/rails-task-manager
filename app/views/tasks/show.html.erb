<h1><%= @task.title %></h1>
<br>

<%= @task.details %> <br>

<% if @task.completed %>
    <i class="far fa-check-square">Your task is completed</i>
    <%= link_to "Edit Task", edit_task_path %>
  <% else  %>
    <i class="far fa-square">Your task is not completed</i>
    <%= link_to "Edit Task", edit_task_path %>
<% end  %>
<br>
<%= link_to "Back to list", tasks_path %>
