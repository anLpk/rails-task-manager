<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task|%>
      <li>
        <% if task.completed %>
            <i class="far fa-check-square"></i>
        <% else  %>
            <i class="far fa-square"></i>
        <% end  %>

            <%= link_to task.title, task_path(task)%>
      </li>
      <%= link_to "Delete #{task.title}",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
    <% end %>
</ul>

<%= link_to "Create New Task", tasks_new_path %>
